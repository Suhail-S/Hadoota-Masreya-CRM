{
  "name": "hadoota-masreya-crm",
  "version": "1.0.0",
  "description": "Hadoota Masreya Restaurant CRM & Management System",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx --env-file=.env server/index.ts",
    "build": "npm run build:client && npm run build:server && npm run build:copy",
    "build:client": "cd client && npm install && npm run build",
    "build:server": "tsc -p server/tsconfig.json",
    "build:copy": "mkdir -p dist/public && cp -r client/dist/* dist/public/",
    "start": "NODE_ENV=production node dist/index.js",
    "serve": "npm run build && npm start",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.94.0",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
